<div class="calculator-container">
  <h1>SPLITTER</h1>
  <div class="calculator" data-controller="calculator">
    <div class="left-side">
      <!-- Bill input -->
      <div class="input-group">
        <label>Bill</label>
        <div class="input-wrapper">
          <span class="dollar-sign">$</span>
          <input type="number" 
                data-calculator-target="bill"
                data-action="input->calculator#calculate"
                placeholder="0"
                min="0"
                step="0.01">
        </div>
      </div>

      <!-- Tip selection -->
      <div class="tip-section">
        <label>Select Tip %</label>
        <div class="tip-grid">
          <button class="tip-btn" data-calculator-target="tipBtn" data-action="click->calculator#selectTip">5%</button>
          <button class="tip-btn" data-calculator-target="tipBtn" data-action="click->calculator#selectTip">10%</button>
          <button class="tip-btn" data-calculator-target="tipBtn" data-action="click->calculator#selectTip">15%</button>
          <button class="tip-btn" data-calculator-target="tipBtn" data-action="click->calculator#selectTip">25%</button>
          <button class="tip-btn" data-calculator-target="tipBtn" data-action="click->calculator#selectTip">50%</button>
          <input type="number" 
                class="custom-tip" 
                placeholder="Custom" 
                data-calculator-target="customTip" 
                data-action="input->calculator#customTipInput"
                min="0"
                max="100">
        </div>
      </div>

      <!-- Number of people -->
      <div class="input-group">
        <label>Number of People</label>
        <div class="input-wrapper">
          <span class="person-icon">ðŸ‘¤</span>
          <input type="number" 
                data-calculator-target="people"
                data-action="input->calculator#calculate"
                placeholder="0"
                min="1">
        </div>
      </div>
    </div>

    <div class="right-side">
      <div class="results">
        <div class="amount-row">
          <div class="amount-label">
            <p>Tip Amount</p>
            <span>/ person</span>
          </div>
          <p class="amount" data-calculator-target="tipAmount">$0.00</p>
        </div>

        <div class="amount-row">
          <div class="amount-label">
            <p>Total</p>
            <span>/ person</span>
          </div>
          <p class="amount" data-calculator-target="total">$0.00</p>
        </div>

        <button class="reset-btn" 
                data-calculator-target="resetBtn" 
                data-action="click->calculator#reset" 
                disabled>RESET</button>
      </div>
    </div>
  </div>
  <div class="error-message hidden" data-calculator-target="errorMessage"></div>
</div>

<%= content_for :head do %>
  <meta name="csrf-token" content="<%= form_authenticity_token %>" />
<% end %>